<?xml version="1.0" encoding="utf-8"?>
<io.armcha.elasticview.ElasticView android:id="@+id/imageElasticView"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardBackgroundColor="#FAF4DE"
    app:cardCornerRadius="10dp"
    app:cardElevation="50dp"
    app:flexibility="5"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
        android:layout_height="150dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <com.mikhaellopez.circularimageview.CircularImageView
            app:civ_shadow_gravity="center"
            android:id="@+id/profilePhoto"
            app:civ_border_color="@color/colorAccent"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="@color/colorPrimary"
            android:layout_margin="10dp"
            android:layout_width="125dp"
            android:layout_height="105dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/textBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/designation"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/textGrey"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/department"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/textGrey"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginEnd="10dp"
                android:background="@color/textBlack"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/call"
                    android:textSize="15sp"
                    android:text="@string/employee_list_option_one"
                    app:icon="@drawable/call"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="5dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/email"
                    android:textSize="15sp"
                    android:text="@string/employee_list_option_two"
                    android:layout_margin="5dp"
                    app:icon="@drawable/email"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:layout_margin="5dp"
                    android:id="@+id/whatsApp"
                    android:textSize="15sp"
                    android:text="@string/employee_list_option_three"
                    app:icon="@drawable/whatsapp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorAccent"
                    android:layout_marginTop="5dp"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
</io.armcha.elasticview.ElasticView>